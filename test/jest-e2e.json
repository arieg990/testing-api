{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleDirectories": [
    "<rootDir>/../",
    "node_modules"
  ],
  "moduleNameMapper": {
    "^@usecase/(.*)": [
      "<rootDir>/../src/usecase/$1"
    ],
    "^@domains/(.*)": [
      "<rootDir>/../src/domains/$1"
    ],
    "^@core/(.*)": [
      "<rootDir>/../src/core/$1"
    ]
  }
}
